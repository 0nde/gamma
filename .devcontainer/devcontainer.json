{
  "name": "Universal Dev Environment (Node.js, Python, Terraform, AWS, GitHub CLI)",
  "dockerFile": "Dockerfile",
  "context": ".",
  "build": {
    "args": {
      "USERNAME": "devuser",
      "USER_UID": "1000",
      "USER_GID": "1000"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "hashicorp.terraform",
        "github.vscode-pull-request-github",
        "amazonwebservices.aws-toolkit-vscode",
        "ms-ceintl.vscode-language-pack-fr",
        "esbenp.prettier-vscode",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "terminal.integrated.defaultProfile.linux": "zsh",
        "extensions.gallery.serviceUrl": "https://open-vsx.org/vscode/gallery",
        "extensions.gallery.itemUrl": "https://open-vsx.org/vscode/item",
        // Ensure Pylint is found if installed via pip by Python extension
        "python.linting.pylintPath": "/usr/local/bin/pylint"
      }
    }
  },
  "postCreateCommand": "echo 'âœ… Development environment ready!' && sudo chown -R devuser:devuser /home/devuser/.aws /home/devuser/.ssh && echo 'Tool versions:' && python --version && node --version && terraform --version && aws --version && gh --version",
  "remoteUser": "devuser",
  "mounts": [
    "source=${localEnv:USERPROFILE}/.aws,target=/home/devuser/.aws,type=bind,consistency=cached",
    "source=${localEnv:USERPROFILE}/.ssh,target=/home/devuser/.ssh,type=bind,consistency=cached"
  ]
}
