{
  "name": "Fabien Dev Environment (Node.js, Python, Terraform, AWS, GitHub CLI)",
  "image": "haonde/aws-archi:0.3",
  "remoteUser": "devuser",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "hashicorp.terraform",
        "github.vscode-pull-request-github",
        "amazonwebservices.aws-toolkit-vscode",
        "ms-ceintl.vscode-language-pack-fr",
        "esbenp.prettier-vscode",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.pylintPath": "/usr/local/bin/pylint",
        "terminal.integrated.defaultProfile.linux": "zsh",
        "extensions.gallery.serviceUrl": "https://marketplace.visualstudio.com/_apis/public/gallery",
        "extensions.gallery.itemUrl": "https://marketplace.visualstudio.com/items"
      }
    },
    "vscodium": {
      "registries": {
        "openvsx": {
          "url": "https://open-vsx.org/vscode/gallery",
          "headers": {
            "Accept": "application/json"
          }
        }
      },
      "extensions": {
        "ms-python.python": {},
        "hashicorp.terraform": {},
        "github.vscode-pull-request-github": {},
        "amazonwebservices.aws-toolkit-vscode": {},
        "ms-ceintl.vscode-language-pack-fr": {},
        "esbenp.prettier-vscode": {},
        "redhat.vscode-yaml": {}
      }
    }
  },
  "postCreateCommand": "for f in /workspaces/$(basename $(pwd))/devcontainer/vsix/*.vsix; do code --install-extension \"$f\" || true; done"
}
